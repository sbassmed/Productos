<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Publicar Producto</h1>
      <%= form_for @product do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre del producto" %>
        </div>
        <div class="form-group">
          <%= f.text_area :price, class: "form-control input-lg", placeholder: "Ingresa el valor" %>
        </div>
        <div>
        <div class="field">
            <% Category.all.each do |category| %>
            <%=  check_box_tag "product[category_ids][]", category.id,  @product.category_ids.include?(category.id)%>
            <%= category.name %> <br>
            <% end  %>
        </div>
          <%= f.submit "Publicar Producto", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
